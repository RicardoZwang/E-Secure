{
  "name": "e-secure",
  "version": "1.0.0",
  "description": "A full-stack JavaScript project with a React frontend and Node.js backend and mySQL as database.",

  "scripts": {
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:both": "npm-run-all --parallel install:backend install:frontend",
    "start:backend": "cd backend && node server.js",
    "start:frontend": "cd frontend && npm start",
    "start:both": "npm-run-all --parallel start:backend start:frontend",
    "postinstall": "./run-sql.sh"
  },
  
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
